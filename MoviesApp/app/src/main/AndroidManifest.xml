<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.myfavouritemovies">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddMovieActivity"
                  android:label="Add Movie"/>

        <activity android:name=".EditMovieActivity"
            android:label="Edit Movie"/>

        <activity android:name=".MoviesByRating"
            android:label="Movies By Rating">
            <intent-filter>
                <action android:name="com.app.myfavouritemovies.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".MoviesByYear"
            android:label="Movies By Year">
            <intent-filter>
                <action android:name="com.app.myfavouritemovies.intent.action.YEAR" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            </activity>


    </application>

</manifest>