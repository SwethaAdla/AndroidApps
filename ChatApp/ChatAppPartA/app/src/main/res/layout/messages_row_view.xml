<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="280dp"
        android:id="@+id/relativeLayout1"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="@string/tvL1msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewL1Message"
            android:textColor="@android:color/black"
            android:layout_marginLeft="3dp"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageViewL1"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"/>

        <ImageView
            app:srcCompat="@drawable/delete"
            android:id="@+id/imageViewL1delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:background="@color/lightBlue"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:text="abcd"
            android:layout_height="wrap_content"
            android:id="@+id/textViewL1sendernametime"
            android:layout_width="200dp"
            android:textColor="@android:color/black"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="3dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="130dp"
        android:id="@+id/relativeLayout2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:text="qwerty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/relativeLayout2"
            android:layout_alignLeft="@+id/relativeLayout2"
            android:layout_alignStart="@+id/relativeLayout2"
            android:id="@+id/textViewL2message"
            android:textColor="@android:color/black"
            android:layout_marginLeft="3dp"
            />

        <TextView
            android:text="@string/txtviewsenderName_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewL2senderNametime"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/black"
            android:layout_marginLeft="3dp"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageViewL2"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="2dp"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/delete"
            android:id="@+id/imageViewL2delete"
            android:background="@color/otherColor"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="5dp"/>

    </RelativeLayout>

</RelativeLayout>
