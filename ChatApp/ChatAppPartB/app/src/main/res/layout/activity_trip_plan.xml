<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_trip_plan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    tools:context="com.app.hw09.TripPlanActivity">

    <Button
        android:text="Add Place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAddPlace"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="View Round Trip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonRoundTrip"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/imageViewGoogleMaps"
        android:layout_toStartOf="@+id/imageViewGoogleMaps"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_above="@+id/imageViewGoogleMaps"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/placesListView"
        android:layout_height="360dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/google_maps_icon"
        android:id="@+id/imageViewGoogleMaps"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/textViewLoginUser_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewLoginUser"
        android:layout_alignParentTop="true"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textColor="@color/colorAccent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/txtVw_tripplanname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTripPlanName"
        android:textColor="@android:color/black"
        android:layout_above="@+id/textViewnoplaceshdng"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp" />

    <TextView
        android:text="@string/txtviewnoplaceshdng_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewnoplaceshdng"
        android:textColor="@android:color/black"
        android:visibility="invisible"
        android:layout_above="@+id/placesListView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
