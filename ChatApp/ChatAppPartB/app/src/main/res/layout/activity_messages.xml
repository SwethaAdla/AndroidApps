<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.hw09.MessagesActivity"
    android:background="@drawable/gradient">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTripNameLocation"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:text="@string/txtviewTripNameLocation_label" />


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageViewaddPhoto"
        android:src="@drawable/gallery"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageViewaddMessage"
        android:src="@drawable/send"
        android:layout_toLeftOf="@+id/imageViewaddPhoto"
        android:layout_alignBottom="@id/imageViewaddPhoto"/>

    <EditText
        android:id="@+id/editTextWriteMessage"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/imageViewaddMessage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="280dp"
        android:text="@string/etwritemsg_label"
        android:hint="Write here.." />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/myRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_above="@+id/imageViewaddPhoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
